<launch>

  <arg name="stdout" default="screen" />
  <arg name="lidar_points" default="/velodyne_points" />
  <arg name="circle_radius" default="0.12" />
  <arg name="centroid_distance_min" default="0.15" />
  <arg name="centroid_distance_max" default="0.25" />
  <arg name="expected_pattern_dist_min" default="0.5" />
  <arg name="expected_pattern_dist_max" default="2.5" />
  <arg name="n_rings" default="16" />
  <!-- PCL PREPROCESSING -->
  <!-- PCL nodelet manager -->
  <node pkg="nodelet" type="nodelet" name="pcl_manager" args="manager" output="$(arg stdout)"/>

  <node pkg="nodelet" type="nodelet" name="pass_through_z_velo" args="load pcl/PassThrough pcl_manager" output="$(arg stdout)">
    <remap from="~input" to="$(arg lidar_points)" />
    <remap from="~output" to="/velodyne/z_filtered" />
    <rosparam>
      filter_field_name: y
      filter_limit_min: -100
      filter_limit_max: 100
      filter_limit_negative: False
      max_queue_size: 1
      keep_organized: False
    </rosparam>
  </node>

  <node pkg="nodelet" type="nodelet" name="pass_through_x_velo" args="load pcl/PassThrough pcl_manager" output="$(arg stdout)">
    <remap from="~input" to="/velodyne/z_filtered" />
    <remap from="~output" to="/velodyne/xy_filtered" />
    <rosparam>
      filter_field_name: x
      filter_limit_min: 0
      filter_limit_max: 100
      filter_limit_negative: False
      max_queue_size: 1
      keep_organized: False
    </rosparam>
  </node>
  <group ns="laser_pattern">
    <rosparam>
      x: 0
      y: 0
      z: 1
      angle_threshold: 0.55
      plane_distance_threshold: 0.05
      circle_radius_threshold: 0.02
    </rosparam>
    <rosparam param="passthrough_radius_min" subst_value="True">$(arg expected_pattern_dist_min)</rosparam>
    <rosparam param="passthrough_radius_max" subst_value="True">$(arg expected_pattern_dist_max)</rosparam>
    <rosparam param="centroid_distance_min" subst_value="True">$(arg centroid_distance_min)</rosparam>
    <rosparam param="centroid_distance_max" subst_value="True">$(arg centroid_distance_max)</rosparam>
    <rosparam param="circle_radius" subst_value="True">$(arg circle_radius)</rosparam>
  </group>

  <node pkg="velo2cam_calibration" type="laser_pattern" name="laser_pattern" output="screen">
    <remap from="~cloud1" to="/velodyne/xy_filtered"/>
    <param name="n_rings" value="$(arg n_rings)" />
  </node>

</launch>
