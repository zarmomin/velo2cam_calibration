<launch>
  <param name="use_sim_time" value="true" />
  <arg name="lidar_points" default="/demo_model/velodyne_points" />
  <arg name="camera_ns" default="vi_sensor" />
  <arg name="image_topic_name" default="image_raw" />

  <arg name="circle_radius" default="0.12" />
  <arg name="circle_centers_distance" default="0.3" />
  <arg name="centroid_distance_min" default="0.15" />
  <arg name="centroid_distance_max" default="0.25" />
  <!-- Rough interval for distance from lidar/camera to the calibration pattern.
  Must exclude any big planar surfaces behind the pattern! -->
  <arg name="expected_pattern_dist_min" default="0.5" />
  <arg name="expected_pattern_dist_max" default="2.0" />

  <include file="$(find velo2cam_calibration)/launch/stereo_pattern.launch">
    <arg name="camera_ns" value="$(arg camera_ns)" />
    <arg name="image_topic_name" value="$(arg image_topic_name)" />
    <arg name="circle_radius" value="$(arg circle_radius)"/>
  </include>
  <include file="$(find velo2cam_calibration)/launch/laser_pattern.launch">
    <arg name="lidar_points" value="$(arg lidar_points)" />
    <arg name="centroid_distance_min" value="$(arg centroid_distance_min)" />
    <arg name="centroid_distance_max" value="$(arg centroid_distance_max)" />
    <arg name="circle_radius" value="$(arg circle_radius)"/>
  </include>

  <node pkg="velo2cam_calibration" type="velo2cam_calibration" name="velo2cam_claib" output="screen">
    <remap from="~cloud1" to="/laser_pattern/centers_cloud"/>
    <remap from="~cloud2" to="/stereo_pattern/centers_cloud"/>
    <param name="radius" value="$(arg circle_radius)"/>
    <param name="centers_distance" value="$(arg circle_centers_distance)"/>
    <param name="sync_iterations" value="false"/>
    <param name="display_debug_msg" value="false"/>
    <param name="camera_ns" value="$(arg camera_ns)" />
    <param name="n_rings" value="16" />
  </node>
</launch>
